<html>
  <head>
    <style>
      body { font-family: Arial, sans-serif; margin: 0; padding: 20px;
      background-color: #f2f2f2; } h1 { text-align: center; margin-bottom: 20px;
      } table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
      th, td { padding: 8px; text-align: left; border-bottom: 1px solid #ddd; }
      th { background-color: #f5f5f5; font-weight: bold; } tbody
      tr:nth-child(even) { background-color: #f9f9f9; } tbody tr:hover {
      background-color: #e9e9e9; } .button { display: block; width: 120px;
      margin: 20px auto; padding: 10px; text-align: center; background-color:
      #4caf50; color: #fff; text-decoration: none; border-radius: 4px;
      font-weight: bold; } .button:hover { background-color: #45a049; }
    </style>
  </head>
  <body>
    {{#if user}}
      <h1>No hay sesión iniciada</h1>
      <a href="/session/login" class="button">Iniciar Sesión</a>
    {{else}}
      <h1>Lista de Productos</h1>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th>Código</th>
            <th>Stock</th>
            <th>Categoría</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>
              <td>{{this.title}}</td>
              <td>{{this.description}}</td>
              <td>{{this.price}}</td>
              <td>{{this.thumbnail}}</td>
              <td>{{this.code}}</td>
              <td>{{this.stock}}</td>
              <td>{{this.category}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  </body>
</html>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>